<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="ImageDiff.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu Height="23" VerticalAlignment="Top">
            <System:String>Text</System:String>
            <Button x:Name="CompareButton" Content="Compare" Width="75" Click="Button_Click"/>
        </Menu>
        <Grid Background="Blue" Margin="0,23,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="ImageLeft" Grid.Column="0" />
            <Image x:Name="ImageRight" Grid.Column="1" />
            <Image x:Name="ImageDiff" Grid.Column="2" />
        </Grid>

    </Grid>
</Window>
